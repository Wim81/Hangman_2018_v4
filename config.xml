<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.wimverpoorten.hangman"
        versionCode = "3"
        version     = "1.0.2" >

    <!-- versionCode is optional and Android only -->

    <name>
        Hangman
    </name>

    <description>
        Play Hangman and save the girl!
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Wim Verpoorten
    </author>

    <plugin name="cordova-plugin-splashscreen" />

    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-targetSdkVersion" value="26" />

    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="1000"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false"/>

    <feature name="SplashScreen" >
        <param
                name="android-package"
                value="org.apache.cordova.splashscreen.SplashScreen" />

        <param
                name="onload"
                value="true" />
    </feature>


    <platform name="android">
        <icon src="icon.png" />
        <icon density="ldpi" src="res/icons/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="res/icons/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="res/icons/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="res/icons/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="res/icons/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="res/icons/android/drawable-xxxhdpi-icon.png" />
        <splash src="splash.png" />
        <splash qualifier="ldpi" src="res/screen/android/drawable-port-ldpi-screen.png" platform="android"  />
        <splash qualifier="mdpi" src="res/screen/android/drawable-port-mdpi-screen.png" platform="android"  />
        <splash qualifier="hdpi" src="res/screen/android/drawable-port-hdpi-screen.png" platform="android"  />
        <splash qualifier="xhdpi" src="res/screen/android/drawable-port-xhdpi-screen.png" platform="android"  />
        <splash qualifier="xxhdpi" src="res/screen/android/drawable-port-xxhdpi-screen.png" platform="android"  />
        <splash qualifier="xxxhdpi" src="res/screen/android/drawable-port-xxxhdpi-screen.png" platform="android"  />
    </platform>

</widget>